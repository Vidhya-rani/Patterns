package patterns;

import java.util.Scanner;

public class right_angle_triangle_decre {
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter the number:");
        int n=sc.nextInt();
        for(int i=1;i<=n;i++){
            for(int j=i;j<=n;j++){
                System.out.print("*");
            }
            System.out.println("");
        }
        System.out.println();
    }
}

